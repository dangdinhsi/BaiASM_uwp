<Page
    x:Class="App8.Views.RegisterFrom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App8.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Width="70" Height="50">
            <AppBarButton x:ConnectionId='16' Icon="Back"                ></AppBarButton>
        </StackPanel>
        <StackPanel Width="700" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
            <TextBlock FontSize="30" Margin="0,30,0,0" HorizontalAlignment="Center" Text="Thông tin cá nhân">
              
            </TextBlock>
        </StackPanel>
        <StackPanel Margin="0,100,0,100" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                
                <TextBlock Margin="0,30,0,0"></TextBlock>
                <TextBox x:ConnectionId='8' x:Name="FirstName" Header="First Name" Width="300"></TextBox>
                <TextBox x:ConnectionId='9' x:Name="LastName" Header="LastName" Width="300"></TextBox>
                <PasswordBox x:ConnectionId='10' x:Name="Password" Header="Password" Width="300"></PasswordBox>
                <TextBox x:ConnectionId='11' x:Name="Address" Header="Address" Width="300"></TextBox>
                <TextBox x:ConnectionId='12' x:Name="Email" Header="Email" Width="300"></TextBox>
                <TextBox x:ConnectionId='13' x:Name="Phone" Header="Phone" Width="300"></TextBox>
                <TextBox x:ConnectionId='14' x:Name="ImageUrl" Header="Avatar link" Width="300"></TextBox>
                <TextBlock Height="20"></TextBlock>
                <Button x:ConnectionId='15' Content="Register" x:Name="BtnSignup" HorizontalAlignment="Center"                      ></Button>
                <TextBlock Height="10"></TextBlock>
                <TextBlock Height="10"></TextBlock>
            </StackPanel>
         
      <StackPanel VerticalAlignment="Center" Margin="50,-35,0,0">
          <Image x:ConnectionId='2' Source="../Assets/LockScreenLogo.png" x:Name="MyAvatar" Width="150" Height="150"></Image>
          <TextBlock></TextBlock>
                <Button x:ConnectionId='3' HorizontalAlignment="Center" Content="Choose Image"                      ></Button>
                <TextBlock HorizontalAlignment="Center" Text="Gender"></TextBlock>
          <RadioButton x:ConnectionId='4' Margin="60,0,0,0" Tag="1" HorizontalAlignment="Center" Content="Male"                        />
          <RadioButton x:ConnectionId='5' Margin="60,0,0,0" Tag="0" HorizontalAlignment="Center" Content="Female"                        
          />
          <RadioButton x:ConnectionId='6' Margin="60,0,0,0" Tag="2" HorizontalAlignment="Center" Content="Other"                         IsChecked="True" />
        <TextBlock Text="Birth Day" HorizontalAlignment="Center"></TextBlock>
          <TextBlock Height="10"></TextBlock>
          <CalendarDatePicker x:ConnectionId='7' HorizontalAlignment="Center" x:Name="BirthDay"                               ></CalendarDatePicker>
         
            </StackPanel>
       
    </StackPanel>
        </Grid>
</Page>

