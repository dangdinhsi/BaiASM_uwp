<Page
    x:Class="App8.Views.SongForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App8.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="ParentStackPanel">
            <TextBox x:Name="Name" Margin="0, 15, 0, 0" Header="Name"  Width="293"/>
            <TextBox x:Name="Singer" Margin="0, 15, 0, 0" Header="Singer"  Width="293"/>
            <TextBox x:Name="Author" Margin="0, 15, 0, 0" Header="Author"  Width="293"/>
            <TextBox x:Name="Thumbnail" Margin="0, 15, 0, 0" Header="Thumbnail"  Width="293"/>
            <TextBox x:Name="Link" Margin="0, 15, 0, 0" Header="Link"  Width="293"/>
            <TextBox AcceptsReturn="True" x:Name="Description" Margin="0, 15, 0, 0" Header="Description" Width="293" Height="100"/>
            <Button HorizontalAlignment="Center" x:Name="BtnSignup" Margin="0, 15, 0, 0" Content="Sign Up" Click="BtnAddSong"/>
            
            <MediaPlayerElement x:Name="Player"/>
        </StackPanel>
    </Grid>
   
</Page>
